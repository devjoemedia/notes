<!DOCTYPE html>
<html>
  <head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8"/>
    <meta http-equiv="X-UA-Compatible" content="IE=edge"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=0, minimal-ui"/>
    <title>${input.title}</title>
  </head>
  <body>
    <div#contextMenu>
      <ul>
        <li.contextItem>copy link</li>
        <li.contextItem>past</li>
        <li.contextItem>save as...</li>
          <hr>
        <li.contextItem>send</li>
        <li.contextItem.share>
          share
          <ul.shareMenu>
            <li.contextItem>facebook</li>
            <li.contextItem>twitter</li>
            <li.contextItem>instagram</li>
          </ul>
        </li>
      </ul>
    </div>
    <div#app></div>
    <if( process.env.NODE_ENV === 'production' )><script src=input.Assets.client.js[0] defer crossorigin></script></if>
    <else>
    <if( Array.isArray( input.Assets.client.js ) )>
      <for|src| of=input.Assets.client.js>
        <script src=src crossorigin=( process.env.NODE_ENV === 'production' ) defer></script>
      </for>
    </if>
    </else>
    <else>
      <script src=input.Assets.client.js crossorigin=( process.env.NODE_ENV === 'production' ) defer></script>
    </else>
    
  </body>
</html>
